{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "D:\\mingw\\mingw64\\bin\\g++.exe",
            "args": [
                "-fexec-charset=gbk",//该代码解决的是c++运行时弹出终端输出乱码的原因
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                //决定最终编译完成的文件生成在哪
                "${workspaceFolder}\\zexe\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                //改成自己的位置mingW位置
                "cwd": "D:\\mingw\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}